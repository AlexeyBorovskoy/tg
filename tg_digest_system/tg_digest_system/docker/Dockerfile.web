# ==============================================================================
# TG Digest System - Web (FastAPI)
# ==============================================================================
FROM python:3.12-slim

LABEL maintainer="ASUDD Team"
LABEL description="TG Digest Web Interface (FastAPI)"

RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Зависимости веб-приложения
COPY web/requirements.txt requirements-web.txt
RUN pip install --no-cache-dir -r requirements-web.txt

# Общие зависимости (БД, telethon для проверки чатов)
COPY requirements.txt .
RUN pip install --no-cache-dir psycopg2-binary telethon aiohttp

COPY web/ /app/web/
COPY prompts/ /app/prompts/

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PROMPTS_DIR=/app/prompts

EXPOSE 8000

HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD curl -sf http://localhost:8000/ > /dev/null || exit 1

WORKDIR /app/web
CMD ["uvicorn", "web_api:app", "--host", "0.0.0.0", "--port", "8000"]
