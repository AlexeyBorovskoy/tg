# ==============================================================================
# recipients.yaml — Получатели дайджестов
# ==============================================================================
# Этот файл определяет, кто получает дайджесты из каких чатов.
# Один человек может входить в несколько групп и получать из нескольких чатов.
#
# ВАЖНО: Скопируйте в recipients.yaml и заполните реальными данными.
# ==============================================================================

groups:
  # ------------------------------------------------------------------------------
  # Группа: Руководители
  # ------------------------------------------------------------------------------
  leads:
    - telegram_id: 123456789              # Telegram ID (получить у @userinfobot)
      name: "Иванов И.И."                 # Имя для логов
      role: "lead"                        # Роль (опционально)
      send_file: true                     # Отправлять .md файл
      send_text: true                     # Отправлять текст сообщением

    - telegram_id: 987654321
      name: "Петров П.П."
      role: "manager"
      send_file: true
      send_text: false                    # Только файл, без текста

  # ------------------------------------------------------------------------------
  # Группа: Техподдержка
  # ------------------------------------------------------------------------------
  support_team:
    - telegram_id: 123456789              # Тот же человек — получает и от leads
      name: "Иванов И.И."
      role: "lead"
      send_file: true
      send_text: true

    - telegram_id: 111222333
      name: "Сидоров С.С."
      role: "engineer"
      send_file: false
      send_text: true                     # Только текст

# ==============================================================================
# Как получить свой Telegram ID:
# ==============================================================================
# 1. Откройте https://t.me/userinfobot в Telegram
# 2. Отправьте любое сообщение
# 3. Бот вернёт ваш ID (число)
#
# Альтернатива: @RawDataBot — перешлите сообщение от нужного пользователя
# ==============================================================================
