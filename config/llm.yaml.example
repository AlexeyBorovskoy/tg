# ==============================================================================
# llm.yaml — Конфигурация LLM (ChatGPT / OpenAI API)
# ==============================================================================
# Настройки для генерации дайджестов через LLM.
#
# ВАЖНО: Скопируйте в llm.yaml и заполните реальными данными.
#        НЕ коммитьте llm.yaml — он в .gitignore!
# ==============================================================================

# Провайдер: openai | gigachat | anthropic
provider: "openai"

# ------------------------------------------------------------------------------
# OpenAI / OpenAI-совместимый API
# ------------------------------------------------------------------------------
openai:
  # API ключ (получить на https://platform.openai.com/api-keys)
  api_key: "sk-proj-your-key-here"
  
  # Модель
  model: "gpt-4o-mini"
  
  # Base URL (для альтернативных провайдеров)
  # OpenAI: https://api.openai.com/v1 (по умолчанию)
  # Artemox: https://api.artemox.com/v1
  # Azure: https://YOUR_RESOURCE.openai.azure.com/
  base_url: null  # null = стандартный OpenAI
  
  # Параметры генерации
  max_tokens: 2000
  temperature: 0.1

# ------------------------------------------------------------------------------
# GigaChat (Сбер)
# ------------------------------------------------------------------------------
gigachat:
  # Ключ авторизации
  auth_key: "your-gigachat-auth-key"
  
  # Модель
  model: "GigaChat"
  
  # Scope (GIGACHAT_API_PERS | GIGACHAT_API_CORP)
  scope: "GIGACHAT_API_PERS"

# ------------------------------------------------------------------------------
# Общие настройки
# ------------------------------------------------------------------------------
defaults:
  # Таймаут запроса (секунды)
  timeout: 60
  
  # Повторные попытки при ошибке
  max_retries: 3
  
  # Задержка между попытками (секунды)
  retry_delay: 5
