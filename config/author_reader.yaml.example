# ==============================================================================
# author_reader.yaml — Конфигурация аккаунта для чтения Telegram-чатов
# ==============================================================================
# Этот файл определяет user-аккаунт Telethon для мониторинга каналов.
# 
# ВАЖНО: Скопируйте в author_reader.yaml и заполните реальными данными.
#        НЕ коммитьте author_reader.yaml — он в .gitignore!
# ==============================================================================

# Telegram API (получить на https://my.telegram.org)
api_id: 12345678
api_hash: "your_api_hash_here"

# Путь к файлу сессии Telethon
# В Docker: /app/data/telethon.session
# Локально: ~/tg_digest/data/telethon.session
session_file: "/app/data/telethon.session"

# Опционально: телефон для автоматической авторизации (не рекомендуется хранить)
# phone: "+7XXXXXXXXXX"
