# ==============================================================================
# database.yaml — Конфигурация PostgreSQL
# ==============================================================================
# Настройки подключения к базе данных.
#
# ВАЖНО: Скопируйте в database.yaml и заполните реальными данными.
#        НЕ коммитьте database.yaml — он в .gitignore!
# ==============================================================================

# Хост базы данных
# В Docker: postgres (имя сервиса)
# Локально: localhost или IP сервера
host: "postgres"

# Порт PostgreSQL
port: 5432

# Имя базы данных
database: "tg_digest"

# Пользователь
user: "tg_digest"

# Пароль (генерировать надёжный!)
password: "CHANGE_ME_STRONG_PASSWORD"

# ==============================================================================
# Дополнительные настройки
# ==============================================================================

# SSL режим (disable | require | verify-ca | verify-full)
sslmode: "disable"

# Таймаут подключения (секунды)
connect_timeout: 10
